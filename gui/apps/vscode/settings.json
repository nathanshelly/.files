{
  // TODO: combine these more cleanly
  "editor.fontSize": 14,
  // Disable moving to MRU tab after closing
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // Don't use selected string for search
  "editor.find.seedSearchStringFromSelection": false,
  // Pass Option through to tmux in the integrated terminal
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.fontSize": 14,
  // Save/Paste configuration
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  // Don't auto-reveal files in the explorer
  "explorer.autoReveal": false,
  // Show issues in the status bar
  "problems.showCurrentInStatus": true,
  // Ignore the freaking extension recommendations
  "extensions.ignoreRecommendations": true,
  // Disable VSCode keyboard nav in lists in favor of Vim plugin
  "workbench.list.automaticKeyboardNavigation": false,
  "editor.lineNumbers": "relative",

  // <<<<<< workbench >>>>>>
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.tabSizing": "shrink",
  // Use a new empty file at startup
  "workbench.startupEditor": "newUntitledFile",
  // Disable the "file preview" feature
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": true,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  // <<<<<< editor >>>>>>
  // appearance
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 100, 120],
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line-thin",
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "gutter",
  // font
  "editor.fontFamily": "Natasha I",
  "editor.fontLigatures": true,
  // whitespace
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  // action
  "editor.emptySelectionClipboard": false,
  // <<<<<< exclusions >>>>>>
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.pyc": true
  },
  // <<<<<< zen mode >>>>>>
  "zenMode.hideTabs": false,
  "zenMode.hideStatusBar": false,
  "zenMode.centerLayout": false,
  // <<<<<< window >>>>>>
  "window.openFilesInNewWindow": "off",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  "window.newWindowDimensions": "maximized",
  "window.zoomLevel": 0,
  // <<<<<< explorer >>>>>>
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // <<<<<< files >>>>>>
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  // <<<<<< colors >>>>>>
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "statusBar.background": "#3e8c9b",
      "statusBar.foreground": "#dbdddd",
      "editor.background": "#232323",
      "editor.findMatchHighlightBackground": "#479eaf94",
      "editorGroupHeader.noTabsBackground": "#232323",
      "editorGroupHeader.tabsBackground": "#232323",
      "tab.activeBackground": "#303030",
      "tab.inactiveBackground": "#232323",
      "titleBar.activeBackground": "#232323",
      "titleBar.inactiveBackground": "#232323",
      "sideBar.background": "#232323",
      "panel.border": "#232323",
      "panel.background": "#232323"
    }
  },
  // <<<<<< markdown >>>>>>
  "markdownlint.config": {
    "default": true,
    "MD004": false,
    "MD007": false,
    "MD024": false,
    "MD029": {
      "style": "ordered"
    },
    "MD041": false,
    "no-hard-tabs": false
  },
  // <<<<<< integrated terminal >>>>>>
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.commandsToSkipShell": [
    "editor.action.toggleTabFocusMode",
    "workbench.action.debug.continue",
    "workbench.action.debug.restart",
    "workbench.action.debug.run",
    "workbench.action.debug.start",
    "workbench.action.debug.stop",
    "workbench.action.openNextRecentlyUsedEditorInGroup",
    "workbench.action.openPreviousRecentlyUsedEditorInGroup",
    "workbench.action.quickOpen",
    "workbench.action.showCommands",
    "workbench.action.terminal.clear",
    "workbench.action.terminal.copySelection",
    "workbench.action.terminal.focus",
    "workbench.action.terminal.focusAtIndex1",
    "workbench.action.terminal.focusAtIndex2",
    "workbench.action.terminal.focusAtIndex3",
    "workbench.action.terminal.focusAtIndex4",
    "workbench.action.terminal.focusAtIndex5",
    "workbench.action.terminal.focusAtIndex6",
    "workbench.action.terminal.focusAtIndex7",
    "workbench.action.terminal.focusAtIndex8",
    "workbench.action.terminal.focusAtIndex9",
    "workbench.action.terminal.focusNext",
    "workbench.action.terminal.focusPrevious",
    "workbench.action.terminal.kill",
    "workbench.action.terminal.new",
    "workbench.action.terminal.paste",
    "workbench.action.terminal.runActiveFile",
    "workbench.action.terminal.runSelectedText",
    "workbench.action.terminal.scrollDown",
    "workbench.action.terminal.scrollDownPage",
    "workbench.action.terminal.scrollToBottom",
    "workbench.action.terminal.scrollToTop",
    "workbench.action.terminal.scrollUp",
    "workbench.action.terminal.scrollUpPage",
    // toggling panels
    "workbench.action.terminal.toggleTerminal",
    "workbench.action.output.toggleOutput",
    "workbench.actions.view.problems",
    "workbench.debug.action.toggleRepl",
    // focusing on other components
    "workbench.action.focusActiveEditorGroup",
    "workbench.action.focusSideBar",
    "workbench.action.focusPanel",
    "workbench.action.terminal.focus",
    "workbench.action.toggleMaximizedPanel",
    "workbench.action.maximizeEditor",
    "workbench.action.toggleZenMode"
  ],

  // <<<<<<<<<<<<<<<<<<>>>>>>>>>>>>>>>>>>
  // <<<<<<<<<<<< languages >>>>>>>>>>>>>
  // <<<<<<<<<<<<<<<<<<>>>>>>>>>>>>>>>>>>

  // ######### jsonc ##########
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ######### python ##########
  "[python]": {
    "editor.formatOnSave": false
  },
  "python.venvPath": "~/envs/python",
  "python.linting.enabled": false,
  "python.defaultInterpreterPath": "python",

  // <<<<<<<<<<<<<<<<<<>>>>>>>>>>>>>>>>>>
  // <<<<<<<<<<<< extensions >>>>>>>>>>>>
  // <<<<<<<<<<<<<<<<<<>>>>>>>>>>>>>>>>>>

  // ######### general ##########
  "extensions.autoUpdate": true,
  // ######### rust-analyzer ##########
  // use version of `rust-analyzer` on path
  "rust-analyzer.server.path": "rust-analyzer",

  // ######### github prs ##########
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user}"
    },
    {
      "label": "Mentioned Me",
      "query": "is:open mentions:${user}"
    }
  ],

  // ######### vim ##########

  // #### native vim settings ####
  "vim.hlsearch": true,
  "vim.leader": "<space>",

  // #### vscodevim custom settings ####
  "vim.replaceWithRegister": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.useSystemClipboard": true,

  // #### keybindings ####
  "vim.insertModeKeyBindings": [{"before": ["j", "k"], "after": ["<Esc>"]}],
  "vim.normalModeKeyBindings": [
    {
      "before": ["C-o"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["C-i"],
      "commands": ["workbench.action.navigateForward"]
    },
    {"before": ["'"], "after": ["$"]},
    {"before": ["\""], "after": ["^"]},
    {"before": ["<leader>", "w"], "commands": [":w"]},
    {"before": ["<leader>", "h", "n"], "commands": [":nohl"]}
  ],
  // TODO: figure out how to deal with this disabling deleting/changing
  // `"` or `'` via vim-surround
  "vim.operatorPendingModeKeyBindings": [
    {"before": ["'"], "after": ["$"]},
    {"before": ["\""], "after": ["^"]}
  ],
  "vim.visualModeKeyBindings": [
    {"before": ["'"], "after": ["$"]},
    {"before": ["\""], "after": ["^"]}
  ]
}
