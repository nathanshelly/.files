# alternate versions - betas, nightlys, etc.
# ref - https://github.com/Homebrew/homebrew-cask-versions
tap "homebrew/cask-versions"

# fonts repository
# ref - https://github.com/Homebrew/homebrew-cask-fonts
tap "homebrew/cask-fonts"

